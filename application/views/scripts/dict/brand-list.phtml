<script>
    $(document).ready(function() {

    });

    function showUpd(brand_id){
        if (!confirm("Вы действительно хотите изменить активность бренда?")) {
            return false;
        }
        $.ajax({
            type: 'POST',
            url: "/dict/brand-list/mode/show-upd/brand_id/" + brand_id + "/",
            success: function(data){
                if(data.result['status'] == false){
                    Notify.generate('Ошибка', '', 3);
                }
                else{
                    Notify.generate('Активность изменен', '', 1);
                    location.reload();
                }
            }
        });
    }

    function delBrand(brand_id, ob){
        if (!confirm("Вы действительно хотите удалить бренд?")) {
            return false;
        }
        $.ajax({
            type: 'POST',
            url: "/dict/brand-list/mode/del-brand/brand_id/" + brand_id + "/",
            success: function(data){
                if(data.result['status'] == false){
                    Notify.generate('Ошибка', '', 3);
                }
                else{
                    Notify.generate('Категория удалена', '', 1);
                    $(ob).closest("tr").remove();
                }
            }
        });
    }
</script>